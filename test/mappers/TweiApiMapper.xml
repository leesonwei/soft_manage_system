			<if test="createAt != null">#{createAt},</if>
			<if test="updateBy != null">#{updateBy},</if>
			<if test="updateAt != null">#{updateAt},</if>
			<if test="dataVersion != null">#{dataVersion},</if>
		</trim>
	</insert>

	<!-- 将TweiApi批量插入到对应数据库的表中 -->
	<insert id="insertTweiApiByBatch" parameterType="ArrayList">
		insert into twei_api(api_type_id,api_id,api_name,api_desc,api_url,api_method,request_example,response_example,fault_example,create_by,create_at,update_by,update_at,data_version) values
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.apiTypeId},#{item.apiId},#{item.apiName},#{item.apiDesc},#{item.apiUrl},#{item.apiMethod},#{item.requestExample},#{item.responseExample},#{item.faultExample},#{item.createBy},#{item.createAt},#{item.updateBy},#{item.updateAt},#{item.dataVersion})
		</foreach>
	</insert>
	

	<!-- 通过辅助工具Assist中的条件将TweiApi对应的数据库表的数据删除 -->
	<delete id="deleteTweiApiByAssist" parameterType="com.common.Assist">
		delete from twei_api
		<if test="require!=null">
			<include refid="assist" />
		</if>
	</delete>
	
	
	
	<!-- 通过辅助工具Assist中的条件将TweiApi中的数据更新到数据库对应的表中,包括值为null的数据 -->
	<update id="updateTweiApi" parameterType="map">
		update twei_api
		<set>
			api_type_id = #{enti.apiTypeId},
			api_id = #{enti.apiId},
			api_name = #{enti.apiName},
			api_desc = #{enti.apiDesc},
			api_url = #{enti.apiUrl},
			api_method = #{enti.apiMethod},
			request_example = #{enti.requestExample},
			response_example = #{enti.responseExample},
			fault_example = #{enti.faultExample},
			create_by = #{enti.createBy},
			create_at = #{enti.createAt},
			update_by = #{enti.updateBy},
			update_at = #{enti.updateAt},
			data_version = #{enti.dataVersion},
		</set>
