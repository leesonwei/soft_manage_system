<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.TweiApiDao">
	<!-- TweiApi的resultMap,column是给数据库列起的别名,它对应property类的属性 -->
	<resultMap id="result_TweiApi_Map" type="com.dto.TweiApi">
		
		<result column="api_type_id" property="apiTypeId" />
		<result column="api_id" property="apiId" />
		<result column="api_name" property="apiName" />
		<result column="api_desc" property="apiDesc" />
		<result column="api_url" property="apiUrl" />
		<result column="api_method" property="apiMethod" />
		<result column="request_example" property="requestExample" />
		<result column="response_example" property="responseExample" />
		<result column="fault_example" property="faultExample" />
		<result column="create_by" property="createBy" />
		<result column="create_at" property="createAt" />
		<result column="update_by" property="updateBy" />
		<result column="update_at" property="updateAt" />
		<result column="data_version" property="dataVersion" />
	</resultMap>

	<!-- assist是查询辅助工具类, ${req.require}表示列名,#{req.value}表示值它是防SQL注入的 -->
	<sql id="assist">
		<where>
			<foreach collection="require" item="req" separator=" ">
				${req.require}
				<if test="req.value != null">
					#{req.value}
				</if>
				<if test="req.values != null">
					<foreach collection="req.values" item="value" separator=",">
						#{value}
					</foreach>
				</if>
				<if test="req.customRequire !=null">
					<foreach collection="req.customRequire" item="cr" separator=" ">
						${cr.require}
						<if test="cr.value != null">
							#{cr.value}
						</if>
						<if test="cr.values != null">
							<foreach collection="cr.values" item="value"
								separator=",">
								#{value}
							</foreach>
						</if>
						<if test="cr.suffix != null"> ${cr.suffix}</if>
					</foreach>
				</if>
				<if test="req.suffix != null"> ${req.suffix}</if>
			</foreach>
		</where>
	</sql>

	<!-- updateAssist用于更新数据查询辅助工具类,作用assist与一致 -->
	<sql id="updateAssist">
		<where>
			<foreach collection="assist.require" item="req" separator=" ">
				${req.require}
				<if test="req.value != null">
					#{req.value}
				</if>
				<if test="req.values != null">
					<foreach collection="req.values" item="value" separator=",">
						#{value}
					</foreach>
				</if>
				<if test="req.customRequire !=null">
					<foreach collection="req.customRequire" item="cr" separator=" ">
						${cr.require}
						<if test="cr.value != null">
							#{cr.value}
						</if>
						<if test="cr.values != null">
							<foreach collection="cr.values" item="value"
								separator=",">
								#{value}
							</foreach>
						</if>
						<if test="cr.suffix != null"> ${cr.suffix}</if>
					</foreach>
				</if>
				<if test="req.suffix != null"> ${req.suffix}</if>
			</foreach>
		</where>
	</sql>

	<!-- 数据库中表名为:twei_api的列名 -->
	<sql id="twei_api_Column">
		api_type_id,api_id,api_name,api_desc,api_url,api_method,request_example,response_example,fault_example,create_by,create_at,update_by,update_at,data_version
	</sql>

	<!--获得类名为:TweiApi对应的数据库表的数据总行数 -->
	<select id="getTweiApiRowCount" parameterType="com.common.Assist" resultType="java.lang.Long">
		select count(*) from twei_api
		<if test="require!=null">
			<include refid="assist" />
		</if>
	</select>
	
	<!-- 获得类名为:TweiApi对应数据库中表的数据集合 -->
	<select id="selectTweiApi" parameterType="com.common.Assist" resultMap="result_TweiApi_Map">
		select
		<if test="distinct !=null">${distinct}</if>
		<choose>
			<when test="resultColumn!=null">${resultColumn}</when>
			<otherwise>
				<include refid="twei_api_Column" />
			</otherwise>
		</choose>
		from twei_api
		<if test="require!=null">
			<include refid="assist" />
		</if>
		<if test="order !=null">${order}</if>
		<choose>
			<when test="startRow !=null and rowSize !=null">LIMIT #{startRow},#{rowSize} </when>
			<when test="rowSize !=null">LIMIT #{rowSize}</when>
		</choose>
	</select>
	
	<!-- 获得一个TweiApi对象,以参数TweiApi对象中不为空的属性作为条件进行查询 -->
	<select id="selectTweiApiObjSingle" parameterType="com.dto.TweiApi" resultMap="result_TweiApi_Map">
		select
		<include refid="twei_api_Column" />
		from twei_api
		<where>
		<if test="apiMethod != null"> and api_method = #{apiMethod}</if>
		<if test="requestExample != null"> and request_example = #{requestExample}</if>
		<if test="responseExample != null"> and response_example = #{responseExample}</if>
		<if test="faultExample != null"> and fault_example = #{faultExample}</if>
		<if test="createBy != null"> and create_by = #{createBy}</if>
		<if test="createAt != null"> and create_at = #{createAt}</if>
		<if test="updateBy != null"> and update_by = #{updateBy}</if>
		<if test="updateAt != null"> and update_at = #{updateAt}</if>
		<if test="dataVersion != null"> and data_version = #{dataVersion}</if>
		<if test="apiTypeId != null"> and api_type_id = #{apiTypeId}</if>
		<if test="apiId != null"> and api_id = #{apiId}</if>
		<if test="apiName != null"> and api_name = #{apiName}</if>
		<if test="apiDesc != null"> and api_desc = #{apiDesc}</if>
		<if test="apiUrl != null"> and api_url = #{apiUrl}</if>
		
		</where>
		LIMIT 1
	</select>
	
	<!-- 获得TweiApi对象,以参数TweiApi对象中不为空的属性作为条件进行查询 -->
	<select id="selectTweiApiByObj" parameterType="com.dto.TweiApi" resultMap="result_TweiApi_Map">
		select
		<include refid="twei_api_Column" />
		from twei_api
		<where>
		<if test="apiMethod != null"> and api_method = #{apiMethod}</if>
		<if test="requestExample != null"> and request_example = #{requestExample}</if>
		<if test="responseExample != null"> and response_example = #{responseExample}</if>
		<if test="faultExample != null"> and fault_example = #{faultExample}</if>
		<if test="createBy != null"> and create_by = #{createBy}</if>
		<if test="createAt != null"> and create_at = #{createAt}</if>
		<if test="updateBy != null"> and update_by = #{updateBy}</if>
		<if test="updateAt != null"> and update_at = #{updateAt}</if>
		<if test="dataVersion != null"> and data_version = #{dataVersion}</if>
		<if test="apiTypeId != null"> and api_type_id = #{apiTypeId}</if>
		<if test="apiId != null"> and api_id = #{apiId}</if>
		<if test="apiName != null"> and api_name = #{apiName}</if>
		<if test="apiDesc != null"> and api_desc = #{apiDesc}</if>
		<if test="apiUrl != null"> and api_url = #{apiUrl}</if>
		
		</where>
	</select>

	<!-- 将TweiApi插入到对应数据库的表中,包括属性值为null的数据 -->
	<insert id="insertTweiApi" parameterType="com.dto.TweiApi">
		insert into 
		twei_api (api_type_id,api_id,api_name,api_desc,api_url,api_method,request_example,response_example,fault_example,create_by,create_at,update_by,update_at,data_version) 
		values(#{apiTypeId},#{apiId},#{apiName},#{apiDesc},#{apiUrl},#{apiMethod},#{requestExample},#{responseExample},#{faultExample},#{createBy},#{createAt},#{updateBy},#{updateAt},#{dataVersion})
	</insert>

	<!-- 将TweiApi中属性值不为null的数据,插入到对应数据库的表中 -->
	<insert id="insertNotNullTweiApi" parameterType="com.dto.TweiApi">
		insert into twei_api
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="apiTypeId != null">api_type_id,</if>
			<if test="apiId != null">api_id,</if>
			<if test="apiName != null">api_name,</if>
			<if test="apiDesc != null">api_desc,</if>
			<if test="apiUrl != null">api_url,</if>
			<if test="apiMethod != null">api_method,</if>
			<if test="requestExample != null">request_example,</if>
			<if test="responseExample != null">response_example,</if>
			<if test="faultExample != null">fault_example,</if>
			<if test="createBy != null">create_by,</if>
			<if test="createAt != null">create_at,</if>
			<if test="updateBy != null">update_by,</if>
			<if test="updateAt != null">update_at,</if>
			<if test="dataVersion != null">data_version,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="apiTypeId != null">#{apiTypeId},</if>
			<if test="apiId != null">#{apiId},</if>
			<if test="apiName != null">#{apiName},</if>
			<if test="apiDesc != null">#{apiDesc},</if>
			<if test="apiUrl != null">#{apiUrl},</if>
			<if test="apiMethod != null">#{apiMethod},</if>
			<if test="requestExample != null">#{requestExample},</if>
			<if test="responseExample != null">#{responseExample},</if>
			<if test="faultExample != null">#{faultExample},</if>
