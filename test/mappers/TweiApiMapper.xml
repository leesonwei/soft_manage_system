			<include refid="updateAssist" />
		</if>
	</update>

	<!-- 通过辅助工具Assist中的条件将TweiApi中属性值不为null的数据更新到数据库对应的表中 -->
	<update id="updateNotNullTweiApi" parameterType="map">
		update twei_api
		<set>
			<if test="enti.apiTypeId != null">api_type_id = #{enti.apiTypeId},</if>
			<if test="enti.apiId != null">api_id = #{enti.apiId},</if>
			<if test="enti.apiName != null">api_name = #{enti.apiName},</if>
			<if test="enti.apiDesc != null">api_desc = #{enti.apiDesc},</if>
			<if test="enti.apiUrl != null">api_url = #{enti.apiUrl},</if>
			<if test="enti.apiMethod != null">api_method = #{enti.apiMethod},</if>
			<if test="enti.requestExample != null">request_example = #{enti.requestExample},</if>
			<if test="enti.responseExample != null">response_example = #{enti.responseExample},</if>
			<if test="enti.faultExample != null">fault_example = #{enti.faultExample},</if>
			<if test="enti.createBy != null">create_by = #{enti.createBy},</if>
			<if test="enti.createAt != null">create_at = #{enti.createAt},</if>
			<if test="enti.updateBy != null">update_by = #{enti.updateBy},</if>
			<if test="enti.updateAt != null">update_at = #{enti.updateAt},</if>
			<if test="enti.dataVersion != null">data_version = #{enti.dataVersion},</if>
		</set>
		<if test="assist.require!=null">
			<include refid="updateAssist" />
		</if>
	</update>
</mapper>